set nu rnu
set showmode
set history=10000

" Search
set hlsearch
set incsearch
set ignorecase
set smartcase
set clipboard=unnamed

" Sound
set visualbell

" Internal plugins
set surround
set ReplaceWithRegister

" Set <leader>
let mapleader = " "

" prevent to lose slection when indenting
vnoremap < <gv
vnoremap > >gv
vnoremap = =gv

" prevent to overwrite register when pasting over selection
vnoremap p pgvy
