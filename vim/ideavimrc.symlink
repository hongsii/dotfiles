" Internal plugins
set surround
set ReplaceWithRegister

" Search
set hlsearch
set incsearch
set ignorecase
set smartcase
set clipboard=unnamed

set showmode
set history=10000


" Set <leader>
let mapleader = " "

" prevent to lose slection when indenting
vnoremap < <gv
vnoremap > >gv
vnoremap = =gv

" prevent to overwrite register when pasting over selection
vnoremap p pgvy
